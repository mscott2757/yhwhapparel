<div class="container">
  <h2><%= t "devise.invitations.new.header" %></h2>

  <div class="invitation-form">
    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => "form-group" } do |f| %>
      <%= devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <p><%= f.label field %><br />
      <%= f.text_field field, class: "form-control" %></p>
    <% end -%>

      <p><%= f.submit t("devise.invitations.new.submit_button"), class: 'btn yhwh-btn' %></p>
    <% end %>
  </div>
</div>
