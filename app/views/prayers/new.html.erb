<%= form_for(@prayer) do |f| %>
  <%= render 'prayers/error_messages', object: f.object %>

  <%= f.label :name, "Name (optional)" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :prayer %>
  <%= f.text_area :prayer, class:  'form-control', size: "x22" %>
  <%= f.submit "Post Prayer", class: "btn btn-primary" %>
<% end %>